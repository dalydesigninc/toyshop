---
const { title, image, alt, description } = Astro.props;
---

<div class="serviceb-card">
  <div class="serviceb-image">
    <img src={image} alt={alt} loading="lazy" />
  </div>
  <div class="serviceb-content">
    <h3 set:html={title}></h3>
    <p>{description}</p>
  </div>
</div>

<style>
.serviceb-card {
  display: flex;
  flex-direction: column;
  background-color: #24222c;
  color: #fff;
  overflow: hidden;
  max-width: 600px;
  min-width: 300px;
  flex: 1;
}

.serviceb-image {
  width: 100%;
  overflow: hidden;
}

.serviceb-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.serviceb-content {
  padding: 1.25rem;
  background-color: #24222c;
  text-align: left;
}

.serviceb-content h3 {
  font-family: "apotek-extrawide", sans-serif;
  color: #fdf499;
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
  text-align: left;
  text-wrap: balance;
}

.serviceb-content p {
  font-size: 1.2rem;
  line-height: 1.5;
  color: #fff;
  text-align: left;
}
</style>