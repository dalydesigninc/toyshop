---
const { title, image, alt, description } = Astro.props;
---

<div class="service-card">
  <div class="service-image">
    <img src={image} alt={alt} loading="lazy" />
    <h3 set:html={title} />
  </div>
  <div class="service-content">
    <p>{description}</p>
  </div>
</div>

<style>
  .service-card {
    display: flex;
    flex-direction: column;
    background-color: #414141;
    color: #fff;
    overflow: hidden;
    max-width: 500px;
    min-width: 300px;
    flex: 1;
  }

  .service-image {
    position: relative;
    overflow: hidden;
  }

  .service-image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    filter: grayscale(100%) brightness(60%);
  }

  .service-image h3 {
    font-family: "apotek-extrawide", sans-serif;
    position: absolute;
    left: 2rem;
    top: 50%;
    transform: translate(0, -75%);
    color: #fdf499;
    font-size: clamp(1.5rem, 4vw, 1.8rem);
    line-height: 97%;
    text-align: left;
    text-wrap: balance;
  }

  .service-content {
    padding: 2rem;
    background-color: #414141;
    text-align: left;
  }

  .service-content p {
    font-size: 1rem;
    line-height: 180%;
    color: #fff;
    text-align: left;
  }
</style>
