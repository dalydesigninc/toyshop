---
const { title, image, content } = Astro.props;
---

<article class=""service-card>
    <img src={image} alt={title} class="card-image" />
    <div class="card-body">
        <h3 class="card-title">{title}</h3>
        <p class="card-text">{content}</p>
    </div>
</article>

<style>
    .service-card {
        background: #2b2b2b;
        color: #fff;
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    
    .card-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }
    
    .card-body {
        padding: 1rem;
    }

    .card-text {
        line-height: 1.5;
        color: #fff;
        font-size: 0.95rem;
    }

</style>