---
const { title, image, alt, description, first } = Astro.props;
---

<div class={`service-card ${first ? "first-card" : ""}`}>
  <div>
    <img src={image} alt={alt} />
    <h3>{title}</h3>
  </div>
  <p>{description}</p>
</div>

<style>
  .service-card {
    display: flex;
    position: relative;
    flex-direction: column;
    background-color: #414141;
    color: #fff;
  }

  div,
  img {
    position: relative;
    overflow: hidden;
  }
  img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    filter: grayscale(100%) brightness(45%);
  }

  h3 {
    position: absolute;
    font-family: "apotek-extrawide", sans-serif;
    position: absolute;
    padding: 2rem;
    top: 50%;
    transform: translate(0, -75%);
    letter-spacing: 1px;
    color: #fffa92;
    font-size: clamp(1.5rem, 4vw, 1.8rem);
    line-height: 97%;
    text-align: left;
    text-wrap: balance;
  }

  p {
    padding: 0.75rem 2rem 1.5rem 2rem;
    background-color: #414141;
    text-align: left;
  }

  p {
    font-size: 1rem;
    line-height: 180%;
    color: #fff;
    text-align: left;
  }
</style>
