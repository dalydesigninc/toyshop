---
const { title, image, alt, description } = Astro.props;
---

<div class="service-card">
  <div class="service-image">
    <img src={image} alt={alt} loading="lazy" />
    <h3 set:html={title}></h3>
  </div>
  <div class="service-content">
    <p>{description}</p>
  </div>
</div>

<style>

.service-card {
  display: flex;
  flex-direction: column;
  background-color: #414141;
  color: #f0efef;
  overflow: hidden;
  max-width: 500px;
  min-width: 300px;
  flex: 1;
}

.service-image {
  position: relative;
  overflow: hidden;
}

.service-image img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  filter: grayscale(100%) brightness(60%);
}

.service-image h3 {
  position: absolute;
  bottom: 15%;
  left: 16px;
  right: 16px;
  color: #fdf499;
  font-size: 1.5rem;
  font-weight: 700;
  text-align: left;
  text-wrap: balance;
}

.service-content {
  padding: 1.25rem;
  background-color: #414141;
  text-align: left;
}

.service-content p {
  line-height: 2.1;
  color: #f0efef;
  text-align: left;
}

</style>