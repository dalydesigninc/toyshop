<section class="specials">
  <div class="specials-header">
    <h1>Ongoing specials</h1>
    <span class="line"></span>
  </div>

<div class="card-grid">
  <div class="card card1">
  <div class="top">
    <img src="/assets/photos/OilChange.jpg" alt="Oil change service" />
    <h3>$59.99<span class="sub">+Tax</span> up to 5 Quart Oil Change Service</h3>
  </div>
